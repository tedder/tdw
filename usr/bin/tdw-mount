#!/bin/env perl
use warnings;
use strict;
my $SUDO = "/usr/bin/sudo";

my %disks = ( 
    '/media/floppy' => '/dev/disk/by-id/usb-SanDisk_SanDisk_Cruzer_1233520A8010FB37-0:0-part1',
    '/mnt/Thai-1' => '/dev/disk/by-label/Thai-1'
);

&loop_disks(%disks);

sub loop_disks () {
    my %hash = @_;
    foreach my $key ( keys %hash ) {
	print "$key => $hash{$key}\n";
	
    };
}

# sudo mount 
# sudo mount /dev/disk/by-label/Thai-1 /mnt/Thai-1
